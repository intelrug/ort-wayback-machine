*
  box-sizing border-box
  margin 0
  padding 0


.page
  position relative
  display block
  height 100%


  &__body
    overflow hidden
    height 100%
    font-family Arial, sans-serif
    font-size 14px
    line-height 1.5


  &__wrapper
    overflow-y auto
    flex-direction column
    height 100%
    max-height 100%


  &__header
    position absolute
    top 0


  &__content
    position absolute
    width 100%
    height 100%
    max-height 100%


  &__footer
    position absolute
    bottom 0


.content
  display flex
  flex-direction column
  height 100%


  &__player
    display flex
    margin 4px 4px 0


  &__audio
    width 100%


  &__messages
    overflow-y hidden
    margin 4px
    flex-basis 0
    flex-grow 1


  &__controls
    display flex
    flex-wrap wrap
    margin-top 6px


  &__controls-select2
    position relative
    z-index 10
    width 340px
    margin 0 4px 4px


  &__controls-time
    & input
      height 36px
      margin 0 4px
      padding 4px 8px
      border 1px solid #ddd
      border-radius 3px


  &__offset-button
    width 50px
    height 36px
    margin 0 4px
    padding 4px 8px
    color #303030
    cursor pointer
    background #eee
    border 1px solid #ddd
    border-radius 3px

    &:focus
      outline none

    &:hover
      background #fff

@media (max-width 780px)
  .content
    &__controls-select2
      width 100%
      flex-grow 1

  .content
    &__offset-button
      flex-grow 1
