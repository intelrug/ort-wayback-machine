*
  box-sizing border-box
  margin 0
  padding 0


.page
  position relative
  display block
  height 100%


  &__body
    overflow hidden
    height 100%
    font-family Arial, sans-serif
    font-size 14px
    line-height 1.5


  &__wrapper
    overflow-y auto
    flex-direction column
    height 100%
    max-height 100%


  &__header
    position absolute
    top 0


  &__content
    position absolute
    width 100%
    height 100%
    max-height 100%


  &__footer
    position absolute
    bottom 0


.content
  display flex
  flex-direction column
  height 100%


  &__player
    display flex
    margin 4px


  &__audio
    width 100%


  &__messages
    display flex
    overflow-y hidden
    flex-direction column-reverse
    margin 4px


  &__controls
    display flex
    flex-wrap wrap


  &__controls-select2
    position relative
    z-index 10
    width 340px
    margin 4px


  &__controls-time
    & input
      height 36px
      margin 4px
      padding 4px 8px
      border 1px solid #ddd
      border-radius 3px


  &__offset
    display flex


  &__offset-button
    width 50px
    height 36px
    margin 4px
    padding 4px 8px
    color #303030
    cursor pointer
    background #eee
    border 1px solid #ddd
    border-radius 3px

    &:focus
      outline none

    &:hover
      background #fff


  &__track-container
    margin 4px auto 4px 4px


  &__track
    margin-right 4px
    padding 4px 10px
    color #2b4b8a
    font-size 14px
    font-weight 700
    background #f0f8ff
    border 1px solid #c8d6e8
    border-radius 3px


  &__track-name
    font-weight 500

@media (max-width 780px)
  .content
    &__controls-select2
      width 100%
      flex-grow 1

  .content
    &__controls-time
      display flex
      flex-grow 1

      & input
        flex-grow 1
        flex-basis 0


    &__offset
      flex-grow 1


    &__offset-button
      flex-grow 1

